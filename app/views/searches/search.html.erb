<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-hover table-inverse">
        <% if @range == "User" %>
          <h3>Users search for"<%= @word %>"</h3>
            <tr>
              <th></th>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
              <td><%= user.name %></td>
            </tr>
          <% end %>
        <% else %>
          <h3>Books search for"<%= @word %>"</h3>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>
