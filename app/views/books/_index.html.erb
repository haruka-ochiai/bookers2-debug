<table class='table table-hover table-inverse'>
  <%=link_to '新しい順', books_path(latest: true) %>
  <%= link_to '古い順', books_path(old: true) %>
  <%= link_to 'いいねが多い順', books_path(most_favorites: true) %>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td>
          <% if book.tag.present? %>
              <%= link_to book.tag, tag_search_search_path(content: book.tag) %>
          <% end %>
        </td>
        <td id= "favorite-btn_<%= book.id %>">
        <%= render "favorites/favorite-btn", book: book %>
        </td>
        <td>
           <p>コメント数：<%= book.book_comments.count %></p>
        </td>
        <td><%= render "books/static_rate", book: book %></td>
        <td>
          <p>閲覧数：<%= book.read_counts.count %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>